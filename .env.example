# Application
NODE_ENV=development
PORT=3000
APP_NAME=GitHub Data Reporter
APP_URL=http://localhost:3000

# Database (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password_here
DB_DATABASE=github_reporter
DB_CONNECTION_LIMIT=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=change_this_super_secret_jwt_key_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=change_this_refresh_token_secret_in_production
JWT_REFRESH_EXPIRES_IN=7d

# GitHub API
GITHUB_API_URL=https://api.github.com

# Email (SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=no-reply@github-reporter.com

# Queue
QUEUE_REPORT_NAME=report-generation
QUEUE_REPORT_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3

# Logging
LOG_LEVEL=debug
